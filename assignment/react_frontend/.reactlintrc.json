{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "react-app",
    "eslint:recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "noInlineConfig": true,
  "overrides": [
    {
      "files": [
        "*.js",
        "*.jsx"
      ]
    }
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/no-direct-mutation-state": "error",
    "react/no-unescaped-entities": "error",
    "semi": [
      "error",
      "always"
    ],
    "quotes": "off",
    "no-dupe-else-if": [
      "error"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-implicit-globals": "error",
    "no-redeclare": "error",
    "no-promise-executor-return": "error",
    "no-undef": "off",
    "no-unused-vars": "off",
    "camelcase": "error",
    "arrow-spacing": "warn",
    "no-var": "error",
    "prefer-const": "error",
    "no-unreachable": "error",
    "complexity": [
      "warn",
      10
    ],
    "no-invalid-this": "warn",
    "no-multi-spaces": "warn",
    "no-self-assign": "warn",
    "require-await": "warn",
    "no-shadow": "warn",
    "comma-spacing": "warn",
    "max-lines-per-function": "warn",
    "prefer-object-spread": "warn",
    "prefer-template": "warn"
  }
}